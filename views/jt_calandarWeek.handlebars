<script>
    var weekOf = '{{week_of}}';
    function addDay(qty) {
        return moment(weekOf, 'MM-DD-YYYY').add(qty, 'days').format("MM-DD-YYYY");
    }
    var strOut="";
    var template = $(".calandar-weekly-day").data('date', addDay(0));

    for (var i = 1; i < 4; i++) {
        var current = template.clone();
        current.data('date', addDay(i));
        current.appendTo($('#calandar-weekly-row'));
    }
</script>
